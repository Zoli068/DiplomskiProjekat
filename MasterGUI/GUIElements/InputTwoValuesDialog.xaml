<Window x:Class="MasterGUI.GUIElements.InputTwoValuesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterGUI.GUIElements"
        mc:Ignorable="d"
         Title="Enter Values" Height="150" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Address -->
        <TextBlock FontSize="14" Text="Address:" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox FontSize="14" x:Name="AddressBox" Grid.Column="1" Margin="0,0,0,5" />

        <!-- Number -->
        <TextBlock FontSize="14" Text="Number:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox FontSize="14" x:Name="NumberBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button FontSize="14" Content="OK" Width="80" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button FontSize="14" Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
